<%= form_for @user, url: 'create', html: { method: :post } do |f| %>
  <div style="width: 50%; margin: 0 auto;">

    <div class="form-group">
      <label for="email">Nome</label>
      <input type="text" name="user[name]" value="" placeholder="" class="form-control">
    </div>

    <div class="form-group">
      <label for="email">E-mail</label>
