<%=@message%>
<br>
<% report = InvoicesHelper.generate_xml_report @invoices %>

<div class="jumbotron" style="width: 80%; margin: 0 auto; text-align: center;">
  <h2>Relatório:</h2>
  <br>
  <p>Empresa: <%=report[:company_name]%></p>
  <p>Mês: <%=report[:month]%></p>
  <p>Notas faltando: <%=report[:missing_invoices].count%></p>
  <p>Maior Nº: <%=report[:greatest_number]%></p>
  <p>Valor total das notas: <%=report[:price]%></p>
</div>
<br>

<% @invoices.each do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= link_to f.invoice_file.file.filename, f.invoice_file.url %>: <a href="/invoices/report/individual/<%=f.id%>">Relatório Individual</a>
  <br>
<% end %>
