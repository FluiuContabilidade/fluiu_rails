<%= form_with(model: appointment, local: true) do |form| %>


  <div class="field">
    <%= form.label :item_date %>
    <%= form.text_field :item_date, id: :appointment_item_date %>
  </div>

  <div class="field">
    <%= form.label :item_type %>
    <%= form.number_field :item_type, id: :appointment_item_type %>
  </div>

  <div class="field">
    <%= form.label :item_description %>
    <%= form.text_field :item_description, id: :appointment_item_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
