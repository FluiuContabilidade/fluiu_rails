<%= form_for @accounting_info, url: 'accounting_info', html: { method: :post } do |f| %>
  <div class="" style="width:60%; margin:0 auto;">
    <!-- <div class="form-group">
    </div> -->

    <div class="form-group">
      <%= f.label :financial_spreadsheet, 'Planilha Financeira'%> - <span>( <a href="https://s3-sa-east-1.amazonaws.com/fluiu-rails-app/Planilha+Cont%C3%A1bil.xlsx" download >Clique Aqui</a> ) para baixar modelo da Planilha Financeira</span>
      <%= f.file_field :financial_spreadsheet %>
    </div>

    <div class="form-group">
      <%= f.label :invoices, 'XMLs das notas fiscais' %>
      <%= f.file_field :invoices, multiple: true, name: "attachment[files][]" %>
    </div>

    <div class="form-group">
      <%= f.label :canceled_invoices, 'Notas canceladas' %>
      <%= f.text_field :canceled_invoices, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :paycheck_changes, 'MudanÃ§as na Folha de Pagamento' %>
      <%= f.text_area :paycheck_changes , class: 'form-control'%>
    </div>

    <input type="hidden" name="user_id" value="<%=@user.id%>">
    <%= f.submit "Enviar", class:'btn btn-default' %>
  </div>
<% end %>
