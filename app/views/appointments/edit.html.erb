<h1>Editing Appointment</h1>

<%= form_for @appointment, url: '', html: { method: :post } do |f| %>
  <div class="field">
    <%= f.label :item_type, "Responsável" %>
    <select name="appointment[item_type]">
      <option value="client">Cliente</option>
      <option value="agent">Fluiu</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :item_date, "Dia do mês"%>
    <%= f.text_field :item_date, id: :appointment_item_date %>
  </div>

  <div class="field">
    <%= f.label :item_description %>
    <%= f.text_field :item_description, id: :appointment_item_description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', appointments_path %>
