<%= form_for @appointment, url: 'edit', html: { method: :patch } do |f| %>
  <div class="" style="width: 80%; margin:0 auto;">
    <h2>Editando Evento</h2>

    <div class="form-group">
      <p>Até o dia
      <select  name="appointment[day]">
        <% for i in 1..31%>
          <%if i == @appointment.day.to_i %>
            <option value="<%=i%>" selected><%=i%></option>
          <% else %>
            <option value="<%=i%>"><%=i%></option>
          <%end%>
        <% end %>
      </select>
      o usuário
      <select name="appointment[owner]">
        <% if @appointment.owner == "agent" %>
          <option value="agent" selected>Fluiu</option>
          <option value="client" >Cliente</option>
        <% else %>
          <option value="agent" >Fluiu</option>
          <option value="client" selected>Cliente</option>
        <% end %>
      </select>
       deverá
      <%= f.text_field :event%>
    </p>
    </div>

    <%= f.submit "Editar", class:'btn btn-default' %>
  </div>
<% end %>
