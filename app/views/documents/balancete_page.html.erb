<%= form_for @document, url: '/documents/add_balancete', html: { method: :post } do |f| %>
  <div class="" style="width:60%; margin:0 auto;">
    <div class="form-group">
      <%= f.label :file, 'Balancete'%>
      <%= f.file_field :file%>
    </div>

    <input type="hidden" name="document[user_id]" value="<%=@user.id%>">
    <input type="hidden" name="document[name]" value="Balancete">
    <%= f.submit "Enviar", class:'btn btn-info' %>
  </div>
<% end %>
